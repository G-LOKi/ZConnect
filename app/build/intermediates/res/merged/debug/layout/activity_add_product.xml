<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.zconnect.login.zconnect.AddProduct">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        android:background="@drawable/input_outline"
        android:padding="10dp" />

    <EditText
        android:id="@+id/nameOfProduct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_below="@+id/imageButton"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/input_outline"
        android:hint="@string/add_name"
        android:padding="10dp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameOfProduct"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="add description"
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <EditText
        android:id="@+id/PosterPhoneNo"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/spinner1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="PhoneNumber"
        android:inputType="phone"
        android:padding="10dp" />

    <Button
        android:id="@+id/postButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="post"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/postButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="31dp"
        android:entries="@array/categories"
        android:prompt="@string/category_prompt" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_alignTop="@+id/imageButton"
        android:ems="10" />

</RelativeLayout>
