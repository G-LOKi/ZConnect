<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zconnect.login.zconnect.shop.Details_of_shop.TabView1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_Shop_offer"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            app:srcCompat="@drawable/beanbags" />

        <TextView
            android:id="@+id/Description_shop_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Name_Shop_offer"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/Name_Shop_offer"
            android:layout_below="@+id/Name_Shop_offer"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/Name_Shop_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_Shop_offer"

            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />


    </RelativeLayout>
</ScrollView>
