<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zconnect.login.zconnect">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ZConnect"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Logo Activity in the starting -->
        <activity
            android:name=".logo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Page -->
        <activity android:name=".logIn">
            <intent-filter>
                <action android:name="com.zconnect.login.zconnect.logIn" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- main home page -->
        <activity android:name=".home">
            <intent-filter>
                <action android:name="com.zconnect.login.zconnect.comunitylist" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Phonebook"
            android:label="@string/title_activity_phonebook"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".Search" />
        </activity>
        <activity
            android:name=".AddContact"
            android:label="@string/title_activity_add_contact"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PhonebookDetails"
            android:label="Details"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PhonebookSearch"
            android:label="Search Results"
            android:launchMode="singleTop"
            android:parentActivityName=".Phonebook">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>